<resources>

    <style name="Theme.TierListMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grey800</item>
        <item name="colorPrimaryVariant">@color/grey800_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple200</item>
        <item name="colorSecondaryVariant">@color/purple200_dark</item>
        <item name="colorOnSecondary">@color/grey800_dark</item>
        <item name="colorSurface">@color/grey800</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@color/grey800_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="snackbarButtonStyle">@style/Style.SnackbarButton</item>
        <item name="navigationViewStyle">@style/Style.NavigationView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.AlertDialog</item>
        <item name="seekBarStyle">@style/Style.SeekBar</item>
    </style>

    <style name="Theme.Launch" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="windowSplashScreenBackground">@color/purple200</item>
        <item name="postSplashScreenTheme">@style/Theme.TierListMaker</item>
    </style>

    <style name="ThemeOverlay.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">@dimen/dialog_bg_dim_amount</item>
        <item name="alertDialogStyle">@style/Style.AlertDialog</item>
        <item name="colorPrimary">@color/purple200</item> <!-- button color -->
    </style>

    <style name="ThemeOverlay.AlertDialog.EnterTierList" parent="ThemeOverlay.AlertDialog">
        <item name="colorPrimary">@color/white</item> <!-- button color -->
        <item name="colorSecondary">@color/purple200</item> <!-- text field indicator color -->
    </style>

</resources>