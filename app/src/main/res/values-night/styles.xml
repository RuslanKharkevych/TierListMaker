<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Style.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
    </style>

    <style name="Style.AlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Style.AlertDialog.ShapeAppearance</item>
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetTop">@dimen/margin_16</item>
        <item name="backgroundInsetBottom">@dimen/margin_16</item>
    </style>

    <style name="Style.AlertDialog.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius</item>
    </style>

    <style name="Style.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">?attr/colorSecondary</item>
        <item name="android:progressBackgroundTint">?attr/colorSecondary</item>
    </style>

</resources>